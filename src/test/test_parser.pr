def test_switch_stmt {
    var str = "
        switch value {}
    "
    var res = parse(str)

    str = "
        switch value {
            case 1: one
            case 2: two
            case: default
        }
    "
    res = parse(str)

    str = "
        switch value {
            case 1:
                print(foo)
                print(bar)
            case 2:
                print(bar)
                print(foo)
        }
    "
    res = parse(str)

    str = "
        switch value {
            case 1..10:
                print(foo)
            case 11..20:
                print(bar)
        }
    "
    res = parse(str)

    str = "
        switch value {
            case 10, 20:
                one
            case 20..30, 30..40:
                two
        }
    "
    res = parse(str)
}

