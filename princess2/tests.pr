import lexer
import buffer

def next_value(list: **lexer::TokenList, tpe: lexer::TokenType) -> lexer::Token {
    let value = (@@list).value
    if value.tpe == lexer::TokenType::ERROR {
        print("Error: ", @(value.value !*string), "\n")
        exit(-1)
    }
    assert(value.tpe == tpe)
    @list = (@@list).next
    return value
}

def next_char(list: **lexer::TokenList) -> char {
    return @(next_value(list, lexer::TokenType::CHAR).value !*char)
}

def next_long(list: **lexer::TokenList) -> ulong {
    return @(next_value(list, lexer::TokenType::INTEGER).value !*ulong)
}

def next_double(list: **lexer::TokenList) -> double {
    return @(next_value(list, lexer::TokenType::FLOAT).value !*double)
}

def next_string(list: **lexer::TokenList) -> string {
    return @(next_value(list, lexer::TokenType::STRING).value !*string)
}

def next_error(list: **lexer::TokenList) -> string {
    let value = (@@list).value
    assert(value.tpe == lexer::TokenType::ERROR)
    let s = @(value.value !*string)
    @list = (@@list).next
    return s
}

